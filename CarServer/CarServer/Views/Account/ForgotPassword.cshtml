@model string

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<link rel="stylesheet" href="~/css/account.css"/>

<div class="forgot-password-container">
    <h2 class="forgot-title">Quên Mật Khẩu</h2>
    <p class="forgot-description">Nhập email của bạn để đặt lại mật khẩu</p>
    <form class="forgot-form" asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="example@gmail.com" required />
        </div>
        <button type="submit" class="forgot-button">Gửi email đặt lại mật khẩu</button>
        <div class="back-to-login">
            <a asp-asp-controller="Account" asp-action="Login">← Quay lại trang đăng nhập</a>
        </div>
    </form>
</div>
