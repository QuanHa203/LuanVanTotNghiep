@model CarServer.Controllers.AccountController.ResetPasswordModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<link rel="stylesheet" href="~/css/account.css"/>

<div class="forgot-password-container">
    <h2 class="forgot-title">Đặt lại mật khẩu mới</h2>
    <p class="forgot-description">Nhập mật khẩu mới</p>
    <form class="forgot-form" asp-action="ResetPassword" method="post">
        <input asp-for="Token" class="form-control" type="hidden" />

        <div class="form-group">
            <label for="new-password">Mật khẩu mới</label>
            <input type="password" asp-for="NewPassword" id="new-password" class="form-control" />
            <span class="fg-red" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label for="re-enter-new-password">Nhập lại mật khẩu mới</label>
            <input type="password" asp-for="ReEnterNewPassword" id="re-enter-new-password" class="form-control" />
            <span class="fg-red" asp-validation-for="ReEnterNewPassword"></span>
        </div>
        <button type="submit" class="forgot-button">Đổi mật khẩu</button>        
    </form>
</div>
